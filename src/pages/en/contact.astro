---
import MainLayout from "../../layouts/MainLayout.astro";
---

<MainLayout
  title="Contact - Critical Studio"
  description="Contact Critical Studio for bookings"
>
  <section class="contact-section">
    <div class="contact-content">
      <h1>Contact Critical Studio</h1>
      <p class="contact-subtitle">
        For acoustic consulting or booking the place
      </p>
      <p class="contact-email">
        <a href="mailto:info@criticalstudio.eu">info@criticalstudio.eu</a>
      </p>
    </div>
  </section>
</MainLayout>

<style>
  .contact-section {
    background: #f8f8f9;
    min-height: calc(100vh - 318px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .contact-content {
    text-align: center;
    max-width: 600px;
  }

  .contact-content h1 {
    font-size: clamp(2rem, 5vw, 2.5rem);
    font-weight: 300;
    color: #1a1a1a;
    margin-bottom: 1.5rem;
  }

  .contact-subtitle {
    font-size: 1.25rem;
    color: #1a1a1a;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .contact-email {
    font-size: 1.25rem;
    color: #1a1a1a;
  }

  .contact-email a {
    color: #42c5be;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .contact-email a:hover {
    color: #369a94;
    text-decoration: underline;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .contact-content h1 {
      font-size: 1.8rem;
    }

    .contact-subtitle,
    .contact-email {
      font-size: 1.1rem;
    }
  }
</style>
